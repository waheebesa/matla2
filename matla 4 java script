var num = Number( prompt( " 1 . 2 . 3 . 4 \n choose one : ")); // לבחור מספר מ 1 עד 4 
   var n = Number(prompt("Eneter Any Number"));  // הקלטת מספר שאתה רוצה לראות אותו בדולר או ביורו...
   switch(num) // בעזרת סוויץ אנחנו יכולים לעשות כמה דברים ביחד וזו דרך הכי טובה וברורה לנו
   {
    case 1:dollar = n /3.55;
    console.log(dollar);
	break;
    case 2:shekel = n*3.55;
    console.log(shekel);
	break;
    case 3:euro = n/3.85;
    console.log(euro);
	break;
    case 4:shekel = n*3.85;
    console.log(shekel);
	break;
    default:
    console.log(" we can not ");
   }
