<script>
    // שאלה מספר 1
    function reverse_a_number(n) // פוקציה שמקבלת מספר וגם מחזירה מספר
    {
    	n = n + ""; //פקודה שעוזרת לנו לעשות את הספר הפוך
	    return n.split("").reverse().join(""); // כמו שלמנו בקורס html css על reverse שעוזר לנו להפוך את המספר
    }
    console.log(reverse_a_number(123456)); // הדפסה ל console
    // סיום של שאלה מספר 1
    // שאלה מספר 2
      var num = Number(prompt("Eneter Any Number"));
      function prime(num)
      {
         if (num === 1)
         {
            return false;
         }
         else
         {
            for(var x = 2; x < num; x++) // בבדיקה שזו מתחילים במספר 2 ולמעלה
            {
               if(num % x === 0) // הפקודה הבסיסית של בדיקה אם המספר שרוצים אם הוא ראשוני או לא
               {
                  return false;
               }
            }
         return true;  
         }
      }
      console.log(prime(num)); // הדפסת מספר שאנחנו רוצים ךדעת אם הוא ראשוני או לא
// סיום של שאלה 2
